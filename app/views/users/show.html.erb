<% if @user.image && @user.image.url %>
    <%= image_tag @user.image.url(:thumb100) %>
<% else %>
    <%= image_tag '/avatar.png' %>
<% end %>

<p>
  <strong>ユーザー名:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>メールアドレス:</strong>
  <%= @user.email %>
</p>
<div class="text-left">
    <%= link_to 'いいねした写真', [@user, :favorites], class:"btn btn-success"  %>
    <% if logged_in? %>
          <%= link_to 'プロフィールを編集', edit_user_path(@user), class:"btn btn-info" %>
  <% end %>
</div>
<div class="text-right">
  <%= link_to '一覧画面に戻る', users_path, class:"btn btn-default" %>
</div>